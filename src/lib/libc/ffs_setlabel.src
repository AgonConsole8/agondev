	.assume	adl=1
	.include "mos_api.inc"
	.section .text
	.global	_ffs_setlabel
_ffs_setlabel:
    push    ix
    ld      ix, 0
    add     ix, sp
    
    ld      hl, (ix+6)          ; Pointer to a zero-terminated volume label string
    ld      a,  ffs_setlabel
    rst.lil 08h                 ; returns FRESULT in A

    ld      sp, ix
    pop     ix
    ret