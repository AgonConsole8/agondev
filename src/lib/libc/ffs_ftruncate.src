	.assume	adl=1
	.include "mos_api.inc"
	.section .text
	.global	_ffs_ftruncate
_ffs_ftruncate:
    push    ix
    ld      ix, 0
    add     ix, sp
    
    ld      hl, (ix+6)          ; Pointer to a FIL structure
    ld      a,  ffs_ftruncate
    rst.lil 08h                 ; returns FRESULT in A

    ld      sp, ix
    pop     ix
    ret