	.assume	adl=1
	.include "mos_api.inc"
	.section .text
	.global	_ffs_getcwd
_ffs_getcwd:
    push    ix
    ld      ix, 0
    add     ix, sp
    
    ld      hl, (ix+6)          ; Pointer to a buffer to store the directory path in
    ld      bc, (ix+9)          ; Maximum length of the buffer
    ld      a,  ffs_getcwd
    rst.lil 08h                 ; returns FRESULT in A

    ld      sp, ix
    pop     ix
    ret